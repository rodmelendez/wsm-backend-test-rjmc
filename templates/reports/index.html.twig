                                <th scope="col">Spend</th>
                                <th scope="col">Clicks</th>
                                <th scope="col">Impressions</th>
                                <th scope="col">Cost per Click</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for data in cuentas %}
                                <tr>
                                    <th scope="row">{{data["accountName"]}}</th>
                                    <td>{{ data["accountId"] }}</td>
                                    <td>{{ data["spend"] }}</td>
                                    <td>{{ data["clicks"] }}</td>
                                    <td>{{ data["impressions"] }}</td>
                                    <td>{{ data["costPerClick"] }}</td>
                                </tr>
